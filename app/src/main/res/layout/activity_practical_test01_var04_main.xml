<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01Var04MainActivity">

    <Button
        android:id="@+id/navigate_to_secondary_activity"
        android:layout_width="303dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:text="Navigate to secondary activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/check_box_student_name"
        android:layout_width="32dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigate_to_secondary_activity" />

    <CheckBox
        android:id="@+id/check_box_class_number"
        android:layout_width="32dp"
        android:layout_height="45dp"
        android:layout_marginTop="104dp"
        android:text="CheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navigate_to_secondary_activity" />

    <EditText
        android:id="@+id/edit_box_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:saveEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@+id/check_box_student_name"
        app:layout_constraintTop_toBottomOf="@+id/navigate_to_secondary_activity" />

    <EditText
        android:id="@+id/edit_box_class_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:saveEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toEndOf="@+id/check_box_class_number"
        app:layout_constraintTop_toBottomOf="@+id/edit_box_student_name" />

    <Button
        android:id="@+id/display_information"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="Display information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_box_class_number" />

    <TextView
        android:id="@+id/text_view_student_info"
        android:layout_width="198dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:text="Student Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_information" />

</androidx.constraintlayout.widget.ConstraintLayout>